{
  "name": "petromac-kiosk",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "data": "tsx scripts/node/data-pipeline.ts",
    "data:operations": "tsx scripts/node/data-pipeline.ts --operations-only",
    "data:check": "pnpm run validate:flipbooks && pnpm run validate:successstories",
    "build:flipbooks": "python scripts/update_flipbooks.py --skip-validate",
    "validate:successstories": "tsx scripts/node/validate-successstories.ts",
    "validate:flipbooks": "tsx scripts/node/validate-flipbooks.ts",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@react-three/drei": "^10.0.6",
    "@react-three/fiber": "^9.1.2",
    "@tanstack/react-table": "^8.21.3",
    "@types/nodemailer": "^7.0.1",
    "@vercel/analytics": "^1.5.0",
    "d3": "^7.9.0",
    "framer-motion": "^12.7.3",
    "geojson": "^0.5.0",
    "next": "15.5.9",
    "nodemailer": "^7.0.6",
    "page-flip": "^2.0.7",
    "papaparse": "^5.4.1",
    "pdf-lib": "^1.17.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.175.0",
    "topojson-client": "^3.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4",
    "@types/d3": "^7.4.3",
    "@types/geojson": "^7946.0.16",
    "@types/node": "^20",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.182.0",
    "@types/topojson-client": "^3.1.5",
    "@types/topojson-specification": "^1.0.5",
    "eslint": "^9",
    "eslint-config-next": "^15.5.4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
